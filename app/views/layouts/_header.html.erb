<header id="header" class="navbar navbar-default navbar-fixed-top">
  <!--header-->
  <div class="header_top">
    <!--header_top-->
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="contactinfo">
            <ul class="nav nav-pills">
              <li><a href="#"><i class="fa fa-phone"></i><%= t("web_info.phone") %></a></li>
              <li><a href="#"><i class="fa fa-envelope"></i><%= t("web_info.email") %></a></li>
              <li><a href="#"><i class="fa fa-envelope"></i><%= t("web_info.address") %></a></li>
            </ul>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="social-icons pull-right">
            <ul class="nav navbar-nav">
              <li><a href="#"><i class="fa fa-facebook"></i></i></a></li>
              <li><a href="#"><i class="fa fa-twitter"></i></i></a></li>
              <li><a href="#"><i class="fa fa-google"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--/header_top-->

  <div class="header-middle">
    <!--header-middle-->
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <div class="mainmenu pull-left">
            <ul class="nav navbar-nav collapse navbar-collapse">
              <li><%= link_to root_path, class: "active" do %><%= t("label.home") %><% end %></li>
              <li class="dropdown"><%= link_to t("label.categorie"), products_path %><i class="fa fa-angle-down"></i>
                <ul role="menu" class="sub-menu">
                  <% load_categories.each do |category|%>
                  <li><%= link_to category.name, products_path(get_category_id: category.id)%></li>
                  <% end %>
                </ul>
              </li>
              <li><%= link_to t("label.suggestion"), sugests_path %></li>
            </ul>
          </div>
          <div>
            <%= form_tag products_path, method: :get, class: "", role: :search do %>
            <div class="search_box pull-right">
              <%= text_field_tag :search_by_name, ""%>
              <%= submit_tag t("label.search"), id: "btnSearch"%>
            </div>
            <% end %>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="shop-menu pull-right">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to carts_path do %><i class="fa fa-shopping-cart"></i><%= t("label.cart") %>
                  <% if user_signed_in? %>
                    <span class="cart-text"><%= current_order.order_items.size %>
                    </span>
                  <% end %>
                <% end %>
              </li>
              <% if user_signed_in? %>
                <% if current_user.admin? %>
                  <li>
                     <%= link_to t("label.admin"), admin_statistics_path %>
                  </li>
                <% end %>
                <li>
                   <%= link_to t("label.account"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"} %>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to t("label.profile"), current_user %>
                      </li>
                       <li>
                        <%= link_to t("label.history_order"), history_orders_path %>
                      </li>
                      <li>
                        <%= link_to t("label.setting"), edit_user_registration_path %>
                      </li>
                      <li>
                        <%= link_to destroy_user_session_path, method: :delete do %>
                          <i class="fa fa-sign-out"></i><%= t("label.log_out") %>
                        <% end %>
                      </li>
                    </ul>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i><%= t("label.log_out") %>
                  <% end %>
                </li>
              <% else %>
                <li>
                    <%= link_to signin_path do %>
                      <i class="fa fa-lock"></i><%= t("label.login") %>
                    <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path do %>
                    <%= t("label.sign_up") %></a>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--/header-middle-->

  <div class="header-bottom fixed-top">
    <!--header-bottom-->
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only"><%= t("label.toggle_navi") %></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
        </div>

      </div>
    </div>
  </div>
  <!--/header-bottom-->
</header>
<!--/header-->
