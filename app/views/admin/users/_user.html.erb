<% unless user.admin? %>
  <tr>
    <td  class="admin_user_images"><%= image_tag user.picture.url.to_s %></td>
    <td><%= link_to user.name, user_path(user) %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.orders.size %></td>
    <td>
      <span><%= link_to t(".delete"), admin_user_path(user, role: :member), method: :delete, class: "btn btn-danger" %></span>
      <span><%= link_to t(".edit"), edit_admin_user_path(user), class: "btn btn-success" %></span>
      <% if user.member? %>
        <span><%= link_to t(".block"), admin_user_path(user, role: :block), class: "btn btn-warning", method: :delete %></span>
      <% else %>
        <span><%= link_to t(".unblock"), admin_user_path(user, role: :unblock), class: "btn btn-default", method: :delete %></span>
      <% end %>
    </td>
  </tr>
<% end %>
